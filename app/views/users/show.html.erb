<div class="row">
    <div class="col-3">
        <%= gravatar_tag @user.email, size: 500, :html => { :class => 'img-fluid' } %>
    </div>
    <div class="col">
        <div class="jumbotron-flud">
            <h1 class="display-3"> <%= @user.username %> 
            <span class="btn-group">
                <%= render 'follow_button' %>
            </span>
            </h1>
            <p class="lead"> 
                <%= link_to 'Fllowers', followers_user_path(@user.username) %> : <%= @user.followers.count %>
                |
                <%= link_to 'Fllowing', following_user_path(@user.username) %> : <%= @user.following.count %>
            </p>
            <p> Age : <%= @user.age %> </p>
            <p>Gender : <%= @user.gender %> </p>
            <hr class="my-3">
            <h1 class="lead">About :</h1>
            <p class="lead"> <%= @user.bio %> </p>
        </div>
    </div>
</div>